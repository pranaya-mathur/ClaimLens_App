# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=claimlens123

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ========================================
# ML Engine Configuration (CatBoost Fraud Detection)
# ========================================
# Path to trained CatBoost model (.cbm file)
ML_MODEL_PATH=models/ml_engine/claimlens_catboost_hinglish.cbm

# Path to model metadata JSON
ML_METADATA_PATH=models/ml_engine/claimlens_model_metadata.json

# Fraud classification threshold (0.0 - 1.0)
ML_THRESHOLD=0.5

# PCA dimensions for narrative embeddings
ML_PCA_DIMS=100

# Hinglish text embedding model
ML_EMBEDDING_MODEL=l3cube-pune/indic-sentence-similarity-sbert

# ========================================
# Computer Vision Configuration
# ========================================
# Set to 'cuda' if you have GPU available, otherwise 'cpu'
CV_DEVICE=cpu

# Computer Vision - Damage Detection Models
PARTS_MODEL_PATH=models/parts_segmentation/yolo11n_best.pt
DAMAGE_MODEL_PATH=models/damage_detection/yolo11m_best.pt
SEVERITY_MODEL_PATH=models/severity_classification/efficientnet_b0_best.pth

# Computer Vision - Forgery Detection Models
FORGERY_MODEL_PATH=models/forgery_detector_latest_run.pth
FORGERY_CONFIG_PATH=models/forgery_detector_latest_run_config.json
FORGERY_THRESHOLD=0.55

# CV Detection Thresholds
PARTS_CONFIDENCE_THRESHOLD=0.25
DAMAGE_CONFIDENCE_THRESHOLD=0.25
MAX_IMAGE_SIZE_MB=10

# ========================================
# LLM Configuration (Groq)
# ========================================
# Get your free API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API (optional fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Feature Flags - Semantic Aggregation & LLM
ENABLE_SEMANTIC_AGGREGATION=true
ENABLE_LLM_EXPLANATIONS=true

# LLM Model Configuration
LLM_MODEL=llama-3.3-70b-versatile
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1024

# Explanation Generator
EXPLANATION_MODEL=llama-3.3-70b-versatile
EXPLANATION_TEMPERATURE=0.3
EXPLANATION_MAX_TOKENS=512

# ========================================
# Redis (for caching)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
LOG_FILE=logs/claimlens.log

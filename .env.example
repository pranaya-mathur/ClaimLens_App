# ========================================
# Neo4j Database Configuration
# ========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# ========================================
# API Server Configuration
# ========================================
API_HOST=0.0.0.0
API_PORT=8000

# ========================================
# ML Engine - Fraud Detection (CatBoost)
# ========================================
# Path to trained CatBoost model
ML_MODEL_PATH=models/ml_engine/claimlens_catboost_hinglish.cbm

# Path to model metadata JSON (feature names, metrics)
ML_METADATA_PATH=models/ml_engine/claimlens_model_metadata.json

# Fraud classification threshold (0.0 - 1.0)
# 0.5 = balanced, <0.5 = aggressive detection, >0.5 = conservative
ML_THRESHOLD=0.5

# PCA dimensions for narrative text embeddings (default: 100)
ML_PCA_DIMS=100

# Hinglish/Hindi text embedding model (HuggingFace)
# Used for encoding claim narratives into features
ML_EMBEDDING_MODEL=AkshitaS/bhasha-embed-v0

# Maximum batch size for ML scoring
ML_MAX_BATCH_SIZE=100

# ========================================
# Computer Vision - Vehicle Damage Detection
# ========================================
# GPU/CPU device ('cuda' if GPU available, 'cpu' otherwise)
CV_DEVICE=cpu

# YOLO models for vehicle damage analysis
PARTS_MODEL_PATH=models/damage_detection/yolo11m_best.pt
DAMAGE_MODEL_PATH=models/damage_detection/yolo11m_best.pt

# Severity classification model (EfficientNet)
SEVERITY_MODEL_PATH=models/severity_classification/efficientnet_b0_best.pth

# Detection confidence thresholds (0.0 - 1.0)
PARTS_CONFIDENCE_THRESHOLD=0.25
DAMAGE_CONFIDENCE_THRESHOLD=0.25

# Maximum uploaded image size (MB)
MAX_IMAGE_SIZE_MB=10

# ========================================
# Computer Vision - Document Forgery Detection
# ========================================

# ðŸ”¥ PAN Card Forgery Detection (ResNet50 4-channel: RGB + ELA)
# Performance: 99.19% accuracy, AUC 0.9996, F1 0.9942
PAN_MODEL_PATH=models/forgery_detection/resnet50_finetuned_after_strong_forgeries.pth

# PAN detection threshold (0.0 - 1.0)
# 0.49 = F1-optimal (default), 0.48 = precision-oriented, 0.50 = balanced
PAN_THRESHOLD=0.49

# ðŸ”¥ Aadhaar Card Forgery Detection (ResNet50)
# Performance: 99.62% accuracy, AUC 0.9999, Balanced accuracy 99.80%
AADHAAR_MODEL_PATH=models/forgery_detection/aadhaar_balanced_model.pth

# Aadhaar detection threshold (0.0 - 1.0)
# 0.5 = balanced (default), optimized for equal TPR/TNR
AADHAAR_THRESHOLD=0.5

# ðŸ”¥ Generic Document Forgery Detection (ResNet50 + ELA + Noise)
# For passports, licenses, bank statements, hospital bills, etc.
FORGERY_MODEL_PATH=models/forgery_detection/forgery_detector_latest_run.pth
FORGERY_CONFIG_PATH=models/forgery_detection/forgery_detector_latest_run_config.json

# Generic forgery detection threshold (0.0 - 1.0)
# Higher = more conservative, fewer false positives
FORGERY_THRESHOLD=0.55

# ========================================
# LLM Configuration (Groq API for Explanations)
# ========================================
# Get your free API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# LLM model for fraud explanations (Groq)
LLM_MODEL=llama-3.3-70b-versatile
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1024

# Explanation generator settings
EXPLANATION_MODEL=llama-3.3-70b-versatile
EXPLANATION_TEMPERATURE=0.3
EXPLANATION_MAX_TOKENS=512

# OpenAI API (optional fallback if Groq fails)
OPENAI_API_KEY=your_openai_api_key_here

# Feature flags
ENABLE_SEMANTIC_AGGREGATION=true
ENABLE_LLM_EXPLANATIONS=true

# ========================================
# Redis Cache (Optional - for performance)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO
LOG_FILE=logs/claimlens.log

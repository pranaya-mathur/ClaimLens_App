# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=claimlens123

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Computer Vision - Device Configuration
# Set to 'cuda' if you have GPU available, otherwise 'cpu'
CV_DEVICE=cpu

# Computer Vision - Damage Detection Models
PARTS_MODEL_PATH=models/parts_segmentation/yolo11n_best.pt
DAMAGE_MODEL_PATH=models/damage_detection/yolo11m_best.pt
SEVERITY_MODEL_PATH=models/severity_classification/efficientnet_b0_best.pth

# Computer Vision - Forgery Detection Models
FORGERY_MODEL_PATH=models/forgery_detector_latest_run.pth
FORGERY_CONFIG_PATH=models/forgery_detector_latest_run_config.json
FORGERY_THRESHOLD=0.55

# CV Detection Thresholds
PARTS_CONFIDENCE_THRESHOLD=0.25
DAMAGE_CONFIDENCE_THRESHOLD=0.25
MAX_IMAGE_SIZE_MB=10

# Groq API (for LLM Explanations)
# Get your free API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API (optional fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Feature Flags - Semantic Aggregation & LLM
ENABLE_SEMANTIC_AGGREGATION=true
ENABLE_LLM_EXPLANATIONS=true

# Redis (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging
LOG_LEVEL=INFO
